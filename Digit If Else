#include <iostream>
#include <windows.h>
using namespace std;

int main()
{
  char symbol;
  cout << "Please enter a symbol: ";
  cin >> symbol;

    if (symbol >= '0' && symbol <= '9')
    {
        std::cout << "This is a digit" << endl;
    }

    else if (symbol >= 'A' && symbol <= 'Z')
    {
        std::cout << "This is a capital letter!"<< endl ;
    }

    else if (symbol >= 'a' && symbol <= 'z')
    {
        std::cout << "This is a lower case letter " << endl;

    }
    else
        std::cout << "This is a sign" << endl;
    }
